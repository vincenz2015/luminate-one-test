$primary = #333333
$brand-primary = #0091CD
$subtle-border = #cccccc
$subtle-background = #eeeeee
$additions = #30C100
$subtractions = #D81F38

@font-face
    font-family 'Lato'
    src url('fonts/Lato-Regular.eot')
    src url('fonts/Lato-Regular.eot?#iefix') format('embedded-opentype'), url('fonts/Lato-Regular.woff2') format('woff2'), url('fonts/Lato-Regular.woff') format('woff'), url('fonts/Lato-Regular.ttf') format('truetype')
    font-style normal
    font-weight normal
    text-rendering optimizeLegibility

*
    box-sizing border-box

html,
body
    margin 0
    padding 0
    font-family 'Lato', sans-serif
    font-size 12px

h1, h2, h3, h4, h5, h6
    font-weight normal

hr
    border 1px solid $subtle-border

a.transparent
    text-decoration none
    color inherit

.text-right
    text-align right

.d-inline-block
    display inline-block

.space-around
    display flex
    justify-content space-around

.space-between
    display flex
    justify-content space-between

.w-10
    width 09%
.w-20
    width 19%
.w-30
    width 29%
.w-40
    width 39%
.w-60
    width 59%
.w-70
    width 69%
.w-80
    width 79%
.w-90
    width 89%

.login-form
    padding-top 25%

.form-container
    margin-top 2rem
    display grid
    grid-template-areas ". . back" ". form ." ". . ."
    grid-template-columns 1fr minmax(300px, 600px) 1fr
    grid-template-rows minmax(20px, 5vh) auto
    h1
        border-bottom 1px solid $primary
        padding-bottom 0.7rem
    .form
        grid-area form
        h4
            margin-bottom 5px
    .back
        grid-area back

.btn_nav,
.btn_icon,
.btn_cancel,
.btn_submit
    background transparent
    display inline-block
    text-decoration none
    cursor pointer
    margin 0 0.25rem
    height 2rem
    &:hover
        opacity 0.6

.btn_logout
    margin-left: 20px

.btn_cancel
    border-radius 0.4rem
    padding 0.3rem 1rem
    height 2rem
    background-color transparent
    border 1px solid $primary
    color $primary

.btn_submit
    border-radius 0.4rem
    padding 0.3rem 1rem
    border 1px solid transparent
    background-color $brand-primary
    color white
    &:hover
        opacity 0.6

.btn_nav
    padding 0.5rem 1rem
    border-radius 3rem
    height 2.5rem
    border 1px solid $primary
    color $primary

.btn_icon
    text-align center
    padding 0.5rem
    height 2.5rem
    width 2.5rem
    border-radius 3rem
    border 1px solid $primary
    color $primary

.btn_md
  font-size 1.4rem
  height 3rem
  padding 0.7rem 1rem

.btn_lg
    font-size 1.4rem
    height 3rem
    padding 0.7rem 2rem

.form-control
    border-radius 3px
    border 1px solid grey
    font-size 1.4rem
    padding 5px
    width 100%
    &.form-inline
        width auto

.input-group
    margin-top 5px
    margin-bottom 5px
    width 100%

.attention
    background-color $brand-primary
    padding 0.5rem 1rem
    display flex
    justify-content flex-end
    align-items center
    .logout-container
        margin-top 0
        margin-left 20px
    .info
        color white
        margin-right 1rem
        .icon
            margin-right: 2rem
        span:not(:first-child)
            font-weight: 900
            margin-right: 0.5rem
    .btn_submit
        background-color white
        color $brand-primary
    .btn_cancel,
    .btn_nav,
    .btn_icon
        color white
        border-color white

table.formal
    border-collapse collapse
    margin 0.5rem 0.5rem 2rem 0.5rem
    th, td
        vertical-align bottom
    tr.schedule_actions td
        height 80px
        padding 1rem
        text-align right
        &.d
            padding-right 0
            padding-left 2rem
    tr.table-row
        height 27px
    td.heading_actions
        position absolute
        right 10px
        top 10px
        text-align right
    td
        padding 0.5rem 0
    th
        font-weight normal
        border-bottom 1px solid $primary
        font-size 1.2rem
        text-align left
        padding-bottom 0.7rem
    .heading
        font-size 2rem
        padding 1.5rem 2rem 0.5rem 1rem
        &.d
            padding-left 2rem
            padding-right 1rem
    .d
        text-align right
        min-width 4rem

span.icon
    line-height 1rem
    width 1rem
    display inline-block

.sidebyside
    position relative
    width 100vw
    overflow hidden
    display grid
    grid-auto-flow column dense
    grid-auto-columns max-content

.unselectable,
.unselectable *
    -webkit-touch-callout none
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

svg.schedule,
svg.timeline
    display block
    &.editable
        cursor pointer
        *
            pointer-events none

rect.day
    fill transparent
    stroke $subtle-border
    pointer-events auto
    &.note
        stroke $additions
    &.subtraction
        display none
    &.addition
        stroke $additions

text.day
    text-anchor middle
    font-size 1.35rem
    &.subtraction
        stroke $subtractions
    &.addition
        stroke $additions

text.month
    font-size 1.3rem

polygon.note
    fill $additions

// .emoji__container
.emoji__input
    width 2.8rem
    height 1.5rem
    transition all 0.2s
    &:hover
        transform scale(1.1)
    & > svg
        fill #b1c6d0
    & > .form-control
        cursor pointer
.emoji__overlay
    position absolute
    top 0
    right 0
    left 0
    min-height 100vh
    background-color $subtle-background
.emoji__search
    margin 3rem
    display flex
    & > input
        flex 1
        border-radius 10rem
        border 1px solid $subtle-border
        padding 1rem 1rem
        outline none
        height 2.8rem
.emoji__category
    margin 0 3rem
    h5
        margin-bottom 0
        color #aaa
        text-transform uppercase
        font-size 1rem
        cursor default
    ul
        list-style none
        margin 0
        padding 0
        display flex
        flex-wrap wrap
        justify-content space-between
        &:after
            content ""
            flex auto
    li
        padding 0.2rem
        margin 0
        cursor pointer
        border-radius 5px
        font-size 1.8rem
        &:hover
            background #ececec
            cursor pointer

.timeline-filter
    display inline-block

.key-entry
    cursor pointer
    display block
    text-decoration none
    color black
